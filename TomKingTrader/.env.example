# TastyTrade API Configuration
TASTY_CLIENT_ID=your_client_id_here
TASTY_CLIENT_SECRET=your_client_secret_here
TASTY_REFRESH_TOKEN=your_refresh_token_here
TASTY_ENVIRONMENT=sandbox

# Application Settings
PORT=3000
WS_PORT=3001
NODE_ENV=development
HOST=localhost

# Account Settings (for auto mode)
DEFAULT_ACCOUNT_NUMBER=your_account_number_here
DEFAULT_PHASE=1
DEFAULT_ACCOUNT_VALUE=30000

# Risk Management
MAX_BP_USAGE=50
MAX_CORRELATION_GROUP=3
VIX_THRESHOLD_HIGH=30
VIX_THRESHOLD_EXTREME=40
EMERGENCY_STOP_LOSS=20

# Trading Rules
ENABLE_0DTE=true
ENABLE_STRANGLES=true
ENABLE_LT112=true
ENABLE_IPMCC=true
ENABLE_SCHEDULER=true

# Scheduler Settings
ANALYSIS_INTERVAL=15
SIGNAL_INTERVAL=5
HEALTH_CHECK_INTERVAL=1

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/trading.log

# WebSocket Settings
WS_PING_INTERVAL=30000
WS_PONG_TIMEOUT=5000
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=5000

# Rate Limiting
API_REQUESTS_PER_SECOND=10
API_REQUESTS_PER_MINUTE=120
API_REQUESTS_PER_HOUR=1000

# Connection Timeouts
API_CONNECTION_TIMEOUT=10000
API_REQUEST_TIMEOUT=30000
API_STREAM_TIMEOUT=60000